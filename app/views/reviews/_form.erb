<%= form_for @review do |f| %>
  <%= f.label "Select the book you're reviewing" %>
  <%= f.collection_select :book_id, @books, :id, :title, book_exist(@book_id), {class: "form-control-sm"} %><br>
  <%= f.label "Or add a new book" %>
  <%= f.fields_for :book %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %><br>
  <%= f.label "Rating out of 5: " %>
  <%= f.number_field :rating, in: 0.0..5.0, step: 0.5, class: "form-control-sm" %><br>
  <%= f.label :blurb %>
  <%= f.text_area :blurb, class: "form-control" %><br>
  <%= f.label :content %>
  <%= f.text_area :content, size: "15x60", class: "form-control" %><br>
  <%= f.hidden_field :user, value: current_user %><br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
